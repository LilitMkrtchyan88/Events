<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="60">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="20">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:textColor="@color/colorBlack"
            android:textStyle="italic"
            android:textSize="12dp"
            android:text="Իրադարձության կարգավիճակ՝"/>
        <TextView
            android:id="@+id/eventStatus_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="14dp"
            android:text="Ավարտված- "/>
        <TextView
            android:id="@+id/userStatusForEvent_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="14dp"
            android:text="Հրավիրված"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:weightSum="20">
        <TextView
             android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:textSize="12dp"
            android:textStyle="italic"
            android:textColor="@color/colorBlack"
            android:text="Իրադարձության ստեղծող՝"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:weightSum="4"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="14dp"
                android:text="Nickname"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="14dp"
                android:text="Username"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textColor="@color/colorBlack"
        android:textStyle="italic"
        android:textSize="8dp"
        android:text="Իրադարձության անվանում՝"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:textSize="14dp"
        android:text="Իրադարձության անվանումմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմմ"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:weightSum="2">
        <Button
            android:layout_marginRight="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="10dp"
            android:background="@color/colorBlue"
            android:text="Այլ  տեղեկատվություն"/>
        <Button
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="10dp"
            android:background="@color/colorBlue"
            android:text="Թեմաներ"/>
    </LinearLayout>
</LinearLayout>